@model IEnumerable<ProjectForHealing.Models.UnassocResource>

@{
    ViewData["Title"] = "Index";
}
    <div class=" container m-0 m-auto">

        <h1>Resources With No Physical Location</h1>
        <div class="list-group">
            <ul>
                @if (Model.Count() != 0)
                {
                    @foreach (var item in Model)
                    {


                        <div class="card mb-3">
                            <div class="card-body">
                                <h4 class="card-title">@Html.ActionLink(item.Name, "UnassocResourceView", new { id = item.ID })</h4>
                                <h6 class="card-subtitle mb-2 text-muted">@item.Description</h6>

                            </div>
                        </div>

                    }

                }
                else
                {

                }


            </ul>

        </div>


    </div>


   
