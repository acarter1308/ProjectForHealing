@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project For Healing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://kit.fontawesome.com/2004ec8e2c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <script src="~/js/map-font-icons.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">

    <style>

        .map-icon-label i {
            font-size: 24px;
            color: #FFFFFF;
            line-height: 55px;
            text-align: center;
            white-space: nowrap;
        }
    </style>
    <script src="https://kit.fontawesome.com/2004ec8e2c.js" crossorigin="anonymous"></script>

    <style>

        #legend {
            font-family: Arial, sans-serif;
            background: #fff;
            padding: 10px;
            margin: 10px;
            border: 3px solid #000;
        }

        body {
            position: relative;
            overflow: scroll;
            min-height: 100%;
            margin: 0px;
            padding: 0px;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/Neighborly-logo.png " alt="Project For Healing" style="width:150px;height:75px;"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Resource" asp-action="Add">Your Service</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="UnassocResourceIndex">Additional Resources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetString("username") == null)
                            {
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login"></a>
                            }
                            else
                            {
                               

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CRMS Dashboard</a>
                            <div class="dropdown-menu" style="">
                                <a class="dropdown-item" href="/Admin/Index">Dashboard</a>
                                <a class="dropdown-item" href="/Admin/ResourceManage">Manage Resources</a>
                                <a class="dropdown-item" href="/Admin/Unapproved">Approve/Unapprove Resources</a>
                                <a class="dropdown-item" href="/Admin/AddEducation">Add Education</a>
                                <a class="dropdown-item" href="/Home/Logout">Logout</a>
                                
                                @if (Context.Session.GetString("role") == "Master Admin")
                                {   <div class="dropdown-divider"></div>

                                    <a class="dropdown-item" href="/Admin/AddAdmin">Create New Admin</a>
                                    <a class="dropdown-item" href="/Admin/AdminList">Remove Admin</a>


                                }

                            </div>
                            
                        </li>
                        }

                        
                        </ul>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Home" asp-action="Search">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search">
                        <button class="btn btn-secondary border rounded my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <!--  <div class="container middlebody">-->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <!-- </div>-->

    <footer class="border-top footer text-muted">
        <div class="container" style="max-height:15px">
            &copy;2019-2020 WeaveTales. All Rights Reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -    @if (Context.Session.GetString("username") == null)
            {
                <a asp-area="" asp-controller="Home" asp-action="Login">Admin Login</a>
            }
            else
            {
                <a asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)



</body>
</html>
