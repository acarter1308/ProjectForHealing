@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}

    <div class="container mt-3">



        <div class="card mb-3">
            <h3 class="card-header">Hello, @ViewBag.name</h3>
            <div class="card-body">
                <h5 class="card-title"> Email: @ViewBag.email </h5>
                <h6 class="card-subtitle text-muted">Phone Number: @ViewBag.number</h6>
            </div>
            <div class="card-body">
                <p class="card-text">Role: @ViewBag.role</p>
            </div>
            <div class="list-group list-group-flush">
                <a href="/Admin/ResourceManage" class="list-group-item list-group-item-action active">Manage Resources</a>
                <a href="/Admin/AddUnassocResource" class="list-group-item list-group-item-action active">Add Additional Resource</a>

                @if (Context.Session.GetString("role") == "Master Admin")
                {
                    <a href="/Admin/AddAdmin" class="list-group-item list-group-item-action active">Create New Admin</a>
                    <a href="/Admin/AdminList" class="list-group-item list-group-item-action active">Remove Admin</a>

                }

            </div>
          
            <div class="card-footer text-muted">
                <a href="/Home/Logout" style="color:#229dc1;">Logout</a>
            </div>
        </div>

       
    </div>
        

